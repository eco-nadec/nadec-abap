{
  "global": {
    "files": "/src/**/*.*"
  },
  "syntax": {
    "version": "v757",
    "errorNamespace": "^(Z|Y|LCL_|TY_|LIF_)"
  },
  "rules": {
    "avoid_use": {
      "define": true,
      "statics": false,
      "defaultKey": true,
      "break": true
    },
    "begin_end_names": true,
    "chain_mainly_declarations": true,
    "check_syntax": true,
    "check_text_elements": false,
    "class_attribute_names": {
      "statics": "^G._.*$",
      "instance": "^M._.*$"
    },
    "cloud_types": false,
    "colon_missing_space": true,
    "commented_code": false,
    "contains_tab": true,
    "definitions_top": true,
    "description_empty": false,
    "double_space": false,
    "empty_line_in_statement": true,
    "empty_statement": true,
    "empty_structure": true,
    "exit_or_check": false,
    "exporting": true,
    "functional_writing": true,
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": true,
    "in_statement_indentation": false,
    "indentation": {
      "ignoreExceptions": true,
      "alignTryCatch": false,
      "globalClassSkipFirst": false,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false
    },
    "inline_data_old_versions": true,
    "keyword_case": {
      "style": "upper",
      "ignoreExceptions": true,
      "ignoreLowerClassImplmentationStatement": true,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false,
      "ignoreFunctionModuleName": false
    },
    "line_length": {
      "length": 120
    },
    "line_only_punc": true,
    "local_class_naming": {
      "local": "^LCL_.*$",
      "test": "^LTCL_.*$",
      "exception": "^LCX_.*$"
    },
    "local_variable_names": {
      "expectedData": "^L._.*$",
      "expectedConstant": "^LC_.*$",
      "expectedFS": "^<L._.*>$"
    },
    "max_one_statement": true,
    "message_exists": false,
    "method_length": {
      "statements": 100,
      "ignoreTestClasses": true
    },
    "mix_returning": true,
    "msag_consistency": false,
    "nesting": {
      "depth": 5
    },
    "no_public_attributes": false,
    "object_naming": {
      "clas": "^ZC(L|X)_",
      "intf": "^ZIF_",
      "prog": "^Z",
      "fugr": "^Z",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^EZ",
      "auth": "^Z",
      "pinf": "^Z",
      "idoc": "^Z",
      "xslt": "^Z"
    },
    "obsolete_statement": {
      "refresh": true,
      "compute": true,
      "add": true,
      "subtract": true,
      "multiply": true,
      "move": true,
      "divide": true,
      "requested": true,
      "occurs": true
    },
    "parser_error": true,
    "preferred_compare_operator": {
      "badOperators": ["EQ", "NE", "GE", "GT", "LE", "LT"]
    },
    "release_idoc": false,
    "sequential_blank": {
      "lines": 4
    },
    "short_case": {
      "length": 1,
      "allow": ["x", "y", "z"]
    },
    "space_before_colon": true,
    "space_before_dot": true,
    "start_at_tab": true,
    "superclass_final": false,
    "tabl_enhancement_category": false,
    "unreachable_code": true,
    "use_new": false,
    "when_others_last": true,
    "whitespace_end": true
  }
}
